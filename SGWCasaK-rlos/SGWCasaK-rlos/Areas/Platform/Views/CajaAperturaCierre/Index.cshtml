
@model Core.DTOs.CajaAperturaCierre.CajaAperturaCierreIndexViewModel

<div class="m-content" style="width: 100%">
    <div class="m-portlet m-portlet--mobile">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        Apertura y Cierre de Cajas
                    </h3>
                </div>
            </div>
        </div>

        <div class="m-portlet__body">
            <!--begin: Search Form -->
            <div class="m-form m-form--label-align-right m--margin-top-20 m--margin-bottom-30">
                <div class="row align-items-center">
                    <div class="col-xl-8 order-2 order-xl-1">
                        <div class="form-group m-form__group row align-items-center">
                            <div class="col-md-4">
                                <div class="m-input-icon m-input-icon--left">
                                    <input type="text" class="form-control m-input" placeholder="Buscar..." id="generalSearch">
                                    <span class="m-input-icon__icon m-input-icon__icon--left">
                                        <span>
                                            <i class="la la-search"></i>
                                        </span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>                    
                </div>
            </div>
            <!--end: Search Form -->
            <!--begin: Datatable -->
            <table class="m-datatable" id="ventasIndexTable" width="100%">
                <thead>
                    <tr>
                        <th title="Field #1">
                            Caja
                        </th>
                        <th title="Field #2">
                            Fecha Apertura
                        </th>
                        <th title="Field #2">
                            Fecha Cierre
                        </th>
                        <th title="Field #2">
                            Monto Apertura
                        </th>
                        <th title="Field #2">
                            Monto Cierre
                        </th>
                       
                    </tr>
                </thead>
                <tbody data-bind="foreach: cajasAperturaCierre">
                    <tr>
                        <td data-bind="text: caja"></td>
                        <td data-bind="text: fechaApertura() == null ? '' : moment(fechaApertura()).format('DD/MM/YYYY')"></td>
                        <td data-bind="text: fechaCierre() == null ? '': moment(fechaCierre()).format('DD/MM/YYYY')"></td>
                        <td data-bind="text: montoApertura"></td>
                        <td data-bind="text: montoCierre"></td>
                       
                    </tr>
                </tbody>
            </table>
            <!--end: Datatable -->
        </div>
    </div>
</div>
@section scripts{
    <script>

        var model = @Html.Raw(Json.Serialize(Model));
        var dataViewModel = ko.mapping.fromJS(model);
       
        ko.applyBindings(dataViewModel);
        $(document).ready(function () {
          
        });
    </script>
}

