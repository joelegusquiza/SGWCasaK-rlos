@model  List<Core.DTOs.Dashboard.DashboardPedidoViewModel>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Platform/Views/Shared/_Layout.cshtml";
}
<div class="m-content" style="width: 100%">
	<div class="row">
		<div class="col-md-12">
			<div class="m-portlet m-portlet--tab">
				<div class="m-portlet__head">
					<div class="m-portlet__head-caption">
						<div class="m-portlet__head-title">
							<span class="m-portlet__head-icon m--hide">
								<i class="la la-gear"></i>
							</span>
							<h3 class="m-portlet__head-text">
								Proximos Pedidos
							</h3>
						</div>
					</div>
				</div>
				<!--begin::Form-->
				
				<div class="m-portlet__body">
					<div class="tab-content">
						<div class="tab-pane active show" id="m_widget4_tab1_content">
							<!--begin::Widget 14-->
							<div class="m-widget4" data-bind="foreach: dataViewModel">
								<!--begin::Widget 14 Item-->
								<div class="m-widget4__item">

									<div class="m-widget4__info">
										<span class="m-widget4__title" : data-bind="text: 'Fecha: '+ moment(fechaEntrega()).format('DD/MM/YYYY HH:mm')">

										</span>
										<br>
										<span class="m-widget4__sub" data-bind="text: direccionEntrega">

										</span>
									</div>
									<div class="m-widget4__ext">
										<a data-bind="attr: { href: '@Url.Action("View", "PedidosCliente", new  { area = "Platform" })?id=' + id() }" class="m-btn m-btn--pill m-btn--hover-brand btn btn-sm btn-secondary">
											Ver
										</a>
									</div>
								</div>
								<!--end::Widget 14 Item-->
							</div>
							<!--end::Widget 14-->
						</div>

					</div>
				</div>			
				<!--end::Form-->
			</div>
		</div>
	</div>

</div>

@section scripts{
	<script>
        var model = @Html.Raw(Json.Serialize(Model));
        var dataViewModel = ko.mapping.fromJS(model);
       
        ko.applyBindings(dataViewModel);


	</script>
}