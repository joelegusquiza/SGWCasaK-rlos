@model Core.DTOs.Dashboard.DashboardIndexViewModel
@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Platform/Views/Shared/_Layout.cshtml";
}
<div class="m-content" style="width: 100%">
	<div class="row">
		<div class="col-md-12">
			<div class="m-portlet m-portlet--tab">
				<div class="m-portlet__head">
					<div class="m-portlet__head-caption">
						<div class="m-portlet__head-title">
							<span class="m-portlet__head-icon m--hide">
								<i class="la la-gear"></i>
							</span>
							<h3 class="m-portlet__head-text">
								Reporte del Dia
							</h3>
						</div>
					</div>
				</div>
				<!--begin::Form-->
				
					<div class="m-portlet__body">
						
						<div class="row m-row--no-padding m-row--col-separator-xl">
							<div class="col-md-12 col-lg-12 col-xl-4">
								<!--begin:: Widgets/Stats2-1 -->
								<div class="m-widget1">
									<div class="m-widget1__item">
										<div class="row  m-row--no-padding align-items-center">
											<div class="col">
												<h3>
													Ventas
												</h3>
												
											</div>
										</div>
										<div class="row m-row--no-padding align-items-center">											
											<div class="col">
												<h3 class="m-widget1__title">
													Cantidad de Vetnas
												</h3>
											
											</div>
											<div class="col m--align-right">
												<span class="m-widget1__number m--font-brand" data-bind="text: ventas.cantVentas">
											
												</span>
											</div>
										</div>
									</div>
									<div class="m-widget1__item">
										<div class="row m-row--no-padding align-items-center">
											<div class="col">
												<h3 class="m-widget1__title">
													Monto Total
												</h3>
												
											</div>
											<div class="col m--align-right">
												<span class="m-widget1__number m--font-danger" data-bind="text: ventas.montoTotal">
													
												</span>
											</div>
										</div>
									</div>
									
								</div>
								<!--end:: Widgets/Stats2-1 -->
							</div>
							<div class="col-md-12 col-lg-12 col-xl-4">
								<!--begin:: Widgets/Stats2-2 -->
								<div class="m-widget1">
									<div class="m-widget1__item">
										<div class="row  m-row--no-padding align-items-center">
											<div class="col">
												<h3>
													Compras
												</h3>

											</div>
										</div>
										<div class="row m-row--no-padding align-items-center">
											<div class="col">
												<h3 class="m-widget1__title">
													Cantidad de Compras
												</h3>
											
											</div>
											<div class="col m--align-right">
												<span class="m-widget1__number m--font-accent" data-bind="text: compras.cantCompras">
													
												</span>
											</div>
										</div>
									</div>
									<div class="m-widget1__item">
										<div class="row m-row--no-padding align-items-center">
											<div class="col">
												<h3 class="m-widget1__title">
													Monto Total
												</h3>
												
											</div>
											<div class="col m--align-right">
												<span class="m-widget1__number m--font-info" data-bind="text: compras.montoTotal">
												
												</span>
											</div>
										</div>
									</div>
									
								</div>
								<!--begin:: Widgets/Stats2-2 -->
							</div>
							<div class="col-md-12 col-lg-12 col-xl-4">
								<!--begin:: Widgets/Stats2-3 -->
								<div class="m-widget1">
									<div class="m-widget1__item">
										<div class="row  m-row--no-padding align-items-center">
											<div class="col">
												<h3>
													Pedidos
												</h3>

											</div>
										</div>
										<div class="row m-row--no-padding align-items-center">
											<div class="col">
												<h3 class="m-widget1__title">
													Cantidad de Pedidos
												</h3>
												
											</div>
											<div class="col m--align-right">
												<span class="m-widget1__number m--font-success" data-bind="text: pedidos.cantPedidos">
												
												</span>
											</div>
										</div>
									</div>
									<div class="m-widget1__item">
										<div class="row m-row--no-padding align-items-center">
											<div class="col">
												<h3 class="m-widget1__title">
													Monto Total
												</h3>
											
											</div>
											<div class="col m--align-right">
												<span class="m-widget1__number m--font-danger" data-bind="text: pedidos.montoTotal">
												
												</span>
											</div>
										</div>
									</div>
									
								</div>
								<!--begin:: Widgets/Stats2-3 -->
							</div>
						</div>
					</div>				
				<!--end::Form-->
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-6">
			<!--begin:: Widgets/New Users-->
			<div class="m-portlet m-portlet--full-height ">
				<div class="m-portlet__head">
					<div class="m-portlet__head-caption">
						<div class="m-portlet__head-title">
							<h3 class="m-portlet__head-text">
								Proximos Pedidos con Delivery
							</h3>
						</div>
					</div>
					
				</div>
				<div class="m-portlet__body">
					<div class="tab-content">
						<div class="tab-pane active show" id="m_widget4_tab1_content">
							<!--begin::Widget 14-->
							<div class="m-widget4" data-bind="foreach: pedidos.pedidosDelivery">
								<!--begin::Widget 14 Item-->
								<div class="m-widget4__item">
									
									<div class="m-widget4__info">
										<span class="m-widget4__title": data-bind="text: 'Fecha: '+ moment(fechaEntrega()).format('DD/MM/YYYY HH:mm')">
										
										</span>
										<br>
										<span class="m-widget4__sub" data-bind="text: direccionEntrega">
											
										</span>
									</div>
									<div class="m-widget4__ext">
										<a data-bind="attr: { href: '@Url.Action("View", "Pedidos", new  { area = "Platform" })?id=' + id() }" class="m-btn m-btn--pill m-btn--hover-brand btn btn-sm btn-secondary">
											Ver
										</a>
									</div>
								</div>
								<!--end::Widget 14 Item-->								
							</div>
							<!--end::Widget 14-->
						</div>
						
					</div>
				</div>
			</div>
			<!--end:: Widgets/New Users-->
		</div>
	</div>
</div>

@section scripts{
	<script>
        var model = @Html.Raw(Json.Serialize(Model));
        var dataViewModel = ko.mapping.fromJS(model);
       
        ko.applyBindings(dataViewModel);


	</script>
}