@model bool
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Shared/Views/Shared/_LoginLayout.cshtml";
}


<div class="m-grid m-grid--hor m-grid--root m-page">
    <div class="m-grid__item m-grid__item--fluid m-grid m-grid--hor m-login m-login--signin m-login--2 m-login-2--skin-2" id="m_login" style="background-image: url(../../../assets/app/media/img//bg/bg-3.jpg);">
        <div class="m-grid__item m-grid__item--fluid	m-login__wrapper">
            <div class="m-login__container">
                <div class="m-login__logo">
                    <a href="#">
                        <img src="../../../assets/app/media/img//logos/logo-1.png">
                    </a>
                </div>
                <div class="m-login__signin">

                    @if (Model)
                    {
                        <div class="m-login__head">
                            <div class="alert alert-success" role="alert">
                                <strong>
                                    Exito
                                </strong>
                                Se ha activado correctamente su cuenta
                            </div>
                        </div>
                        <form id="form" class="m-login__form m-form" data-bind="submit: postDataToController">
                           
                            <div class="m-login__form-action">
                                <a href="@Url.Action("Index", "Login", new { area = "Shared"})" id="loginBtn" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air m-login__btn m-login__btn--primary">
                                    Volver al login
                                </a>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="m-login__head">
                            <div class="alert alert-error" role="alert">
                                <strong>
                                    Error
                                </strong>
                                No se pudo activar su cuenta
                            </div>
                        </div>                      
                    }

                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>

    </script>
}
